<style>
/* Search button style */
.btn-search {
  background-color: #fe424d;
  color: #fff;
  border-radius: 25px;
  padding: 0 1rem;
  width: 7rem;
}

.btn-search:hover {
  background-color: #fe424d;
  color: #fff;
}

.btn-search i {
  margin-right: 0.5rem;
  display: inline;
}

/* Search input style */
.search-in {
  border-radius: 25px;
  padding: 0.5rem 1rem;
  width: 25rem;
}

/* Navbar height */
.navbar {
  min-height: 60px;
}

/* Mobile specific fixes */
@media (max-width: 767px) {
  .navbar-collapse {
    position: absolute;  /* overlay instead of pushing content */
    top: 60px;           /* navbar height */
    left: 0;
    width: 100%;
    z-index: 1000;
    background: white;
    padding: 1rem;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  /* Stack items vertically in mobile */
  .navbar-nav {
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .navbar-nav .nav-link {
    padding: 0.5rem 0;
  }

  /* Search form vertical stacking */
  .d-flex {
    flex-direction: column;
    gap: 0.5rem;
  }

  .ms-auto {
    margin-left: 0 !important;
  }
}
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Toggle button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" 
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <!-- Left: Logo -->
      <div class="navbar-nav">
        <a class="nav-link airbnb" href="/listings"><i class="fa-brands fa-airbnb"></i> Airbnb</a>
      </div>

      <!-- Center: Search -->
      <div class="navbar-nav mx-auto">
        <form class="d-flex" role="search" action="/listings/search" method="get">
          <input class="form-control me-2 search-in" type="search" name="location" placeholder="Search destinations"/>
            <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser){ %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if(currUser){ %>
          <a class="nav-link" href="/logout">Log out</a>
        <% } %>
      </div>

    </div>
  </div>
</nav>
